<PluginUserControl x:Class="VNDBNexus.VndbVisualNovelViewControlAggregate.VndbVisualNovelViewControl"
                   xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:pluginControls="clr-namespace:VNDBNexus.Controls"
                   xmlns:pluginConverters="clr-namespace:VNDBNexus.Converters"
                   xmlns:commonConverters="clr-namespace:PluginsCommon.Converters"
                   xmlns:vndbVnDomain="clr-namespace:VndbApiDomain.VisualNovelAggregate;assembly=VndbApiDomain"
                   xmlns:vndbTraitDomain="clr-namespace:VndbApiDomain.TraitAggregate;assembly=VndbApiDomain"
                   xmlns:vndbImageDomain="clr-namespace:VndbApiDomain.ImageAggregate;assembly=VndbApiDomain"
                   xmlns:vndbDomainSharedkernel="clr-namespace:VndbApiDomain.SharedKernel;assembly=VndbApiDomain"
                   xmlns:vndbNexusEnums="clr-namespace:VNDBNexus.Enums"
                   xmlns:vndbNexusDatabase="clr-namespace:VNDBNexus.Database"
             xmlns:local="clr-namespace:VNDBNexus.VndbVisualNovelViewControlAggregate"
             mc:Ignorable="d"
             d:DesignHeight="2000" d:DesignWidth="500">
    <PluginUserControl.Resources>
        <pluginConverters:BbCodeToHtmlStringConverter x:Key="BbCodeToHtmlStringConverter" />
        <pluginConverters:VnRelationFiltererConverter x:Key="VnRelationFiltererConverter" />
        <pluginConverters:TraitGroupAndSpoilerFilterConverter x:Key="TraitGroupAndSpoilerFilterConverter" />
        <pluginConverters:EnumToLocalizationStringConverter x:Key="EnumToLocalizationStringConverter" />
        <pluginConverters:CharacterBirthdayToStringConverter x:Key="CharacterBirthdayToStringConverter" />
        <pluginConverters:CharacterToMeasurementsStringConverter x:Key="CharacterToMeasurementsStringConverter" />
        <pluginConverters:ReleaseToAdditionalnformationConverter x:Key="ReleaseToAdditionalnformationConverter" />
        <pluginConverters:VndbPlatformToImageConverter x:Key="VndbPlatformToImageConverter" />
        <commonConverters:EnumToListConverter x:Key="EnumToListConverter" />
        <commonConverters:StringNullOrEmptyToVisibilityConverter x:Key="StringNullOrEmptyToVisibilityConverter" />
        <commonConverters:EnumerableStringJoinConverter x:Key="EnumerableStringJoinConverter" />
        <commonConverters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
        <commonConverters:EqualityToVisibilityConverter x:Key="EqualityToVisibilityConverter" />
        <commonConverters:TypeEqualityToVisibilityConverter x:Key="TypeEqualityToVisibilityConverter" />
        <commonConverters:EnumValueToVisibilityConverter x:Key="EnumValueToVisibilityConverter" />
        <commonConverters:InvertedEnumValueToVisibilityConverter x:Key="InvertedEnumValueToVisibilityConverter" />
        <commonConverters:IEnumerableHasItemsToVisibilityConverter x:Key="IEnumerableHasItemsToVisibilityConverter" />
        
        <Style TargetType="{x:Type pluginControls:VnRelationControl}">
            <Style.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
            </Style.Resources>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type pluginControls:VnRelationControl}">
                        <Expander IsExpanded="True">
                            <Expander.Header>
                                <TextBlock FontWeight="Medium"
                                           Text="{Binding RelationType, RelativeSource={RelativeSource TemplatedParent},Converter={StaticResource EnumToLocalizationStringConverter}}"/>
                            </Expander.Header>
                            <StackPanel Margin="0,0,0,5">
                                <ItemsControl Margin="30,5,0,0"
                                          ItemsSource="{Binding Relations, RelativeSource={RelativeSource TemplatedParent}}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="{DynamicResource LOC_VndbNexus_UnofficialReleaseLabel}" Margin="0,0,5,0"
                                                       Style="{DynamicResource BaseTextBlockStyle}"
                                                           Opacity="0.50"
                                                           Visibility="{Binding RelationOfficial, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}" />
                                                <Button Background="Transparent"
                                                    HorizontalAlignment="Left"
                                                    HorizontalContentAlignment="Left"
                                                    BorderThickness="0"
                                                    Padding="0"
                                                        ToolTip="{Binding Title}"
                                                    Command="{Binding DataContext.LoadVnRelationDataCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                                    CommandParameter="{Binding}">
                                                    <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" />
                                                </Button>
                                            </StackPanel>

                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </StackPanel>
                        </Expander>
                        
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type pluginControls:CharacterTraitControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type pluginControls:CharacterTraitControl}">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding FilteredTraits, RelativeSource={RelativeSource TemplatedParent}}">
                                <ItemsControl.Resources>
                                    <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
                                </ItemsControl.Resources>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Margin="0,0,8,3" Padding="1" Background="Transparent" BorderThickness="0"               
                                                Command="{Binding ElementName=MainGrid, Path=DataContext.OpenTraitVndbPageCommand}"
                                                CommandParameter="{Binding}">
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="{Binding Name}" VerticalAlignment="Center" />
                                                <TextBlock Text="S" Margin="3,0,0,3"
                                                           VerticalAlignment="Center"
                                                           FontSize="10"
                                                           Visibility="{Binding SpoilerLevel, Converter={StaticResource EnumValueToVisibilityConverter}, ConverterParameter={x:Static vndbDomainSharedkernel:SpoilerLevelEnum.Major}}"
                                                           Foreground="Red" />
                                                <TextBlock Text="S" Margin="3,0,0,3"
                                                           VerticalAlignment="Center"
                                                           FontSize="10"
                                                           Visibility="{Binding SpoilerLevel, Converter={StaticResource EnumValueToVisibilityConverter}, ConverterParameter={x:Static vndbDomainSharedkernel:SpoilerLevelEnum.Minimum}}"
                                                           Foreground="Orange" />
                                            </StackPanel>
                                            
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type pluginControls:VndbImageControl}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type pluginControls:VndbImageControl}">
                        <StackPanel>
                            <ItemsControl ItemsSource="{Binding FilteredImages, RelativeSource={RelativeSource TemplatedParent}}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Button Margin="0,10,10,0" Padding="1" Background="Transparent" BorderThickness="0"
                                                Command="{Binding ElementName=MainGrid, Path=DataContext.OpenScreenshotCommand}"
                                                CommandParameter="{Binding}">
                                            <Grid>
                                                <Image Source="{Binding ThumbnailUrl, Mode=OneWay, Converter={StaticResource ImageUriToBitmapImageConverter}, IsAsync=False}"
                                                    Height="110" RenderOptions.BitmapScalingMode="Fant" StretchDirection="Both"
                                                    DockPanel.Dock="Left" Margin="2" />
                                                <Border BorderThickness="2" BorderBrush="Red"
                                                        Visibility="{Binding ViolenceLevel,
                                                        Converter={StaticResource InvertedEnumValueToVisibilityConverter},
                                                        ConverterParameter={x:Static vndbImageDomain:ImageViolenceLevelEnum.Tame}}" />
                                                <Border BorderThickness="2" BorderBrush="Red"
                                                        Visibility="{Binding SexualityLevel,
                                                        Converter={StaticResource InvertedEnumValueToVisibilityConverter},
                                                        ConverterParameter={x:Static vndbImageDomain:ImageSexualityLevelEnum.Safe}}" />
                                            </Grid>
                                        </Button>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <DataTemplate x:Key="CharacterWrapperTemplate">
            <DataTemplate.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
            </DataTemplate.Resources>
            <StackPanel Margin="0,0,0,0">
                <DockPanel>
                    <Image Source="{Binding Character.Image.Url, Mode=OneWay, Converter={StaticResource ImageUriToBitmapImageConverter}, IsAsync=False}"
                                               x:Name="CharacterImage"
                                               Width="120" RenderOptions.BitmapScalingMode="Fant" StretchDirection="Both"
                                               VerticalAlignment="Top" DockPanel.Dock="Left" Margin="0,0,10,0" />
                    <Grid Height="{Binding ElementName=CharacterImage, Path=Height}" MinHeight="100">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>
                        <Button Padding="0" Background="Transparent" BorderThickness="0"
                                CommandParameter="{Binding Character}"
                                HorizontalAlignment="Left">
                            <Button.Command>
                                <PriorityBinding>
                                    <Binding Path="DataContext.OpenCharacterVndbPageCommand" RelativeSource="{RelativeSource AncestorType=PluginUserControl}" />
                                    <Binding Mode="OneTime" Source="{x:Null}" />
                                </PriorityBinding>
                            </Button.Command>
                            <TextBlock Text="{Binding Character.Name}"
                                   FontWeight="Bold" FontSize="16" Margin="0,0,0,0"/>
                        </Button>

                        <StackPanel Grid.Row="1" Margin="0,10,0,0" VerticalAlignment="Bottom"
                                    Visibility="{Binding Character.Description, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_DescriptionLabel}" FontWeight="Medium" VerticalAlignment="Bottom" />
                            <Separator Margin="0,3,0,3" />
                            <ScrollViewer VerticalAlignment="Bottom" VerticalScrollBarVisibility="Auto" MaxHeight="100">
                                <pluginControls:HtmlTextView Margin="0,0,0,0"
                                                         HorizontalAlignment="left"
                                                         HtmlFontFamily="{DynamicResource FontFamily}"
                                                         HtmlForeground="{DynamicResource TextColor}"
                                                         LinkForeground="{DynamicResource GlyphColor}"
                                                         HtmlFontSize="{DynamicResource FontSize}">
                                    <pluginControls:HtmlTextView.HtmlText>
                                        <MultiBinding Converter="{StaticResource BbCodeToHtmlStringConverter}">
                                            <Binding Path="Character.Description" />
                                            <Binding Path="DataContext.CharactersMaxSpoilerLevel" RelativeSource="{RelativeSource AncestorType=PluginUserControl}" />
                                        </MultiBinding>
                                    </pluginControls:HtmlTextView.HtmlText>
                                </pluginControls:HtmlTextView>
                            </ScrollViewer>

                        </StackPanel>
                    </Grid>
                </DockPanel>

                <pluginControls:GridEx AutoLayoutColumns="2" ColumnCount="2" RowCount="15" Margin="0,20,0,0"
                                                       StarColumns="1">

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsAliases}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharAliasesText, Path=Visibility}"/>

                    <TextBlock Text="{Binding Character.Aliases, Converter={StaticResource EnumerableStringJoinConverter}}"
                               Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Text, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                               Margin="8,3,0,0" x:Name="CharAliasesText" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsMeasurements}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharMeasurementsText, Path=Visibility}" />

                    <TextBlock Text="{Binding Character, Converter={StaticResource CharacterToMeasurementsStringConverter}}" TextWrapping="Wrap"
                                                   Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Text, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                                                   Margin="8,3,0,0" x:Name="CharMeasurementsText" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsBirthday}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharBirthdayText, Path=Visibility}" />

                    <TextBlock Text="{Binding Character.Birthday, Converter={StaticResource CharacterBirthdayToStringConverter}}"
                               Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Text, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}"
                               Margin="8,3,0,0" x:Name="CharBirthdayText" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsHair}" FontWeight="Medium" Margin="0,3,0,0"
                               Visibility="{Binding ElementName=CharHairTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharHairTraitsControl"
                                            Traits="{Binding Character.Traits}"
                                            TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Hair}"
                                            MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsEyes}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharEyesTraitsControl, Path=Visibility}"/>

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharEyesTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Eyes}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsBody}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharBodyTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharBodyTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Body}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsClothes}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharClothesTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharClothesTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Clothes}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsItems}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharItemsTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharItemsTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Items}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsPersonality}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharPersonalityTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharPersonalityTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Personality}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsRole}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharRoleTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharRoleTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.Role}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsEngagesIn}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharEngagesInTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharEngagesInTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.EngagesIn}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsSubjectOf}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharSubjectOfTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharSubjectOfTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.SubjectOf}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsEngagesInSexual}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharEngagesInSexualTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharEngagesInSexualTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.EngagesInSexual}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                        IncludeSexualTraits="{Binding DisplayCharacterSexualTraits, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsSubjectOfSexual}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=CharSubjectOfSexualTraitsControl, Path=Visibility}" />

                    <pluginControls:CharacterTraitControl Margin="8,3,0,0"
                                            x:Name="CharSubjectOfSexualTraitsControl"
                                        Traits="{Binding Character.Traits}"
                                        TraitGroup="{x:Static vndbTraitDomain:TraitGroupEnum.SubjectOfSexual}"
                                        MaxSpoilerLevel="{Binding CharactersMaxSpoilerLevel, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                        IncludeSexualTraits="{Binding DisplayCharacterSexualTraits, RelativeSource={RelativeSource AncestorType=PluginUserControl}}" />

                    <TextBlock Text="{DynamicResource LOC_VndbNexus_CharacterTraitsVoicedBy}" FontWeight="Medium" Margin="0,3,0,0"
                                                   Visibility="{Binding ElementName=ButtonVoiceActor, Path=Visibility}" />

                    <Button BorderThickness="0" Background="Transparent" Padding="0"
                                                HorizontalAlignment="Left"
                                                Margin="8,3,0,0"
                                                x:Name="ButtonVoiceActor"
                                                Visibility="{Binding RelativeSource={RelativeSource Self}, Path=Content, Converter={StaticResource NullToVisibilityConverter}}"
                                                Content="{Binding VoiceActor.Staff.Name, TargetNullValue={x:Null}, FallbackValue={x:Null}}"
                                                Command="{Binding DataContext.OpenStaffVndbPageCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                                CommandParameter="{Binding VoiceActor.Staff}"/>
                </pluginControls:GridEx>

                <Separator Margin="0,5,0,10" />

            </StackPanel>
        </DataTemplate>

        <Style TargetType="ListBoxItem" x:Key="TransparentListBoxItemStyle">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Border x:Name="Border" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="Transparent" TargetName="Border"/>
                                <Setter Property="BorderBrush" Value="Transparent" TargetName="Border"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="Transparent" TargetName="Border"/>
                                <Setter Property="BorderBrush" Value="Transparent" TargetName="Border"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5" TargetName="Border"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <Style TargetType="ListBox" x:Key="CharacterWrappersLbStyle">
            <Style.Resources>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource TransparentListBoxItemStyle}" />
            </Style.Resources>
            <Setter Property="Margin" Value="0,10,0,0" />
            <Setter Property="MaxHeight" Value="1300" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="ItemTemplate" Value="{DynamicResource CharacterWrapperTemplate}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <ScrollViewer VirtualizingStackPanel.IsVirtualizing="True"
                                      VerticalScrollBarVisibility="Auto"
                                      HorizontalScrollBarVisibility="Disabled"
                                      Padding="0,0,0,0"
                                      VirtualizingStackPanel.VirtualizationMode="Recycling">
                            <ItemsPresenter Margin="0,0,15,0" />
                        </ScrollViewer>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ListBox" x:Key="ReleasesLbStyle">
            <Style.Resources>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource TransparentListBoxItemStyle}" />
            </Style.Resources>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled" />
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBox">
                        <StackPanel VirtualizingStackPanel.IsVirtualizing="True"
                                    VirtualizingStackPanel.VirtualizationMode="Recycling">
                            <ItemsPresenter Margin="0,0,15,0" />
                        </StackPanel>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <DataTemplate x:Key="ReleasesGroupReleaseItemTemplate">
            <DataTemplate.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
            </DataTemplate.Resources>
            <Grid Margin="0,0,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2.5*"/>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="8*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding ReleaseDate}"
                           VerticalAlignment="Center" />

                <DockPanel Grid.Column="1" Margin="8,0,0,0" VerticalAlignment="Center">
                    <ItemsControl DockPanel.Dock="Right" ItemsSource="{Binding Platforms}"
                                  Margin="5,0,0,0"
                                  VerticalAlignment="Center">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <DockPanel />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Converter={StaticResource VndbPlatformToImageConverter}, IsAsync=True}"
                                       DockPanel.Dock="Right"
                                       MaxHeight="16" MaxWidth="16"
                                       VerticalAlignment="Center"
                                       Margin="3,0,0,0"
                                       RenderOptions.BitmapScalingMode="Fant" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                    <TextBlock DockPanel.Dock="Left" Text="&#xEF44;" FontFamily="{DynamicResource FontIcoFont}"
                                                   VerticalAlignment="Center"
                                                   Foreground="Red"
                                                   Visibility="{Binding HasErotic, Converter={StaticResource BooleanToVisibilityConverter}}" />
                    <TextBlock DockPanel.Dock="Left" Text="&#xEF44;" FontFamily="{DynamicResource FontIcoFont}"
                                                   VerticalAlignment="Center"
                                                   Foreground="#255a81"
                                                   Visibility="{Binding HasErotic, Converter={StaticResource BooleanToVisibilityConverter}, ConverterParameter=True}" />
                    <TextBlock DockPanel.Dock="Left"
                               Visibility="{Binding MinimumAge, Converter={StaticResource NullToVisibilityConverter}}"
                               Text="{Binding MinimumAge, StringFormat='{}{0}+'}"
                               Margin="5,0,8,0" VerticalAlignment="Center" />

                    
                </DockPanel>

                <WrapPanel Grid.Column="2" Margin="8,0,0,0" VerticalAlignment="Center">
                    <Button ToolTip="{Binding Title}" Padding="0" Background="Transparent"
                            VerticalAlignment="Center"
                            BorderThickness="0" Margin="0,0,5,0"
                            Command="{Binding DataContext.OpenReleaseVndbPageCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                            CommandParameter="{Binding}">
                        <TextBlock Text="{Binding Title}" TextTrimming="CharacterEllipsis" VerticalAlignment="Center" />
                    </Button>
                    
                    <TextBlock Text="{Binding Path=., Converter={StaticResource ReleaseToAdditionalnformationConverter}}"
                               Opacity="0.50" />
                </WrapPanel>
            </Grid>
        </DataTemplate>
        
        <DataTemplate x:Key="ReleasesGroupItemTemplate">
            <DataTemplate.Resources>
                <Style TargetType="TextBlock" BasedOn="{StaticResource BaseTextBlockStyle}" />
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource TransparentListBoxItemStyle}" />
            </DataTemplate.Resources>
            <Expander IsExpanded="True" Margin="0,0,0,5">
                <Expander.Header>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Grouper, Converter={StaticResource EnumToLocalizationStringConverter}}" />
                    </StackPanel>
                </Expander.Header>
                <ListBox Margin="30,5,0,0" ItemsSource="{Binding Entities}" Style="{StaticResource ReleasesLbStyle}"
                         ItemTemplate="{DynamicResource ReleasesGroupReleaseItemTemplate}" />
            </Expander>
        </DataTemplate>

    </PluginUserControl.Resources>

    <Grid x:Name="MainGrid">
        <TabControl SelectedIndex="{Binding SelectedControlTabIndex}">
            <TabItem Header="{DynamicResource LOC_VndbNexus_InformationLabel}">
                <StackPanel Margin="0,20,0,0">
                    <DockPanel Margin="0,0,0,10">
                        <Button DockPanel.Dock="Right"
                                Command="{Binding DataContext.RefreshVisualNovelDataCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                CommandParameter="{Binding ActiveVisualNovel}">
                            <TextBlock Text="&#xEFD1;"
                                       VerticalAlignment="Center"
                                       FontFamily="{DynamicResource FontIcoFont}"
                                       ToolTip="{DynamicResource LOC_VndbNexus_RefreshDataLabel}"/>
                        </Button>

                        <Button Command="{Binding DataContext.OpenVnVndbPageCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                CommandParameter="{Binding ActiveVisualNovel}"
                                DockPanel.Dock="Left" VerticalAlignment="Center"
                                HorizontalAlignment="Left"
                                Margin="0,0,10,0"
                                Padding="0" Background="Transparent" BorderThickness="0">
                            <TextBlock Text="{Binding ActiveVisualNovel.Title}"
                                   TextTrimming="CharacterEllipsis"
                                   FontSize="22" FontWeight="Bold"/>
                        </Button>


                    </DockPanel>
                    <DockPanel>
                        <Image Source="{Binding ActiveVisualNovel.Image.Url, Mode=OneWay, Converter={StaticResource ImageUriToBitmapImageConverter}, IsAsync=False}"
                               x:Name="VisualNovelImage"
                               Width="120" RenderOptions.BitmapScalingMode="Fant" StretchDirection="Both"
                               VerticalAlignment="Top" DockPanel.Dock="Left" Margin="0,0,10,0" />
                        <StackPanel DockPanel.Dock="Left">


                            <Expander x:Name="TitlesExpander" Header="{DynamicResource LOC_VndbNexus_VisualNovelTitlesLabel}" VerticalAlignment="Center"
                                      Margin="0,10,0,0"
                                  Visibility="{Binding ElementName=TitlesControl, Path=HasItems, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl x:Name="TitlesControl" VerticalAlignment="Top" Margin="30,5,0,0"
                                          ItemsSource="{Binding ActiveVisualNovel.Titles}" />
                            </Expander>

                            <Expander Header="{DynamicResource LOC_VndbNexus_VisualNovelAliasesLabel}" IsExpanded="True"
                                      Margin="0,10,0,0"
                                      Visibility="{Binding ElementName=VnAliasesControl, Path=HasItems, Converter={StaticResource BooleanToVisibilityConverter}}">
                                <ItemsControl Margin="30,0,0,0" x:Name="VnAliasesControl"
                                      VerticalAlignment="Center" ItemsSource="{Binding ActiveVisualNovel.Aliases}">
                                    <ItemsControl.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding Path=.}" Style="{DynamicResource BaseTextBlockStyle}" />
                                        </DataTemplate>
                                    </ItemsControl.ItemTemplate>
                                </ItemsControl>
                            </Expander>

                            <Expander Header="{DynamicResource LOC_VndbNexus_PlayTimeLabel}" IsExpanded="True"
                                      Margin="0,10,0,0"
                                      Visibility="{Binding LengthText, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                                <Button Command="{Binding DataContext.OpenLengthVotesPageCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                        VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="30,0,0,0"
                                        Padding="0" Background="Transparent" BorderThickness="0">
                                    <TextBlock Text="{Binding LengthText}"
                                               TextTrimming="CharacterEllipsis" />
                                </Button>
                            </Expander>
                            
                            <Expander Header="{DynamicResource LOC_VndbNexus_VisualNovelRelationsLabel}" IsExpanded="True"
                                      Margin="0,10,0,0"
                                      Visibility="{Binding RelationsSectionVisibility}">
                                <StackPanel Margin="30,0,0,0">
                                    <ToggleButton x:Name="UnofficialToggleButton"
                                                  Visibility="{Binding RelationsUnofficialButonVisibility}"
                                  Content="{DynamicResource LOC_VndbNexus_VisualNovelsShowUnnoficial}"
                                  HorizontalAlignment="Left"
                                  Margin="0,10,0,5"
                                  IsChecked="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.OriginalGame}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.AlternativeVersion}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.SharesCharacters}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.Fandisc}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.Prequel}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.Sequel}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.SameSetting}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.SameSeries}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.ParentStory}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                    <pluginControls:VnRelationControl
                                RelationsSource="{Binding ActiveVisualNovel.Relations}"
                                RelationType="{x:Static vndbVnDomain:VnRelationTypeEnum.SideStory}"
                                IncludeUnofficial="{Binding DisplayUnnoficialRelations}" />
                                </StackPanel>
                            </Expander>

                            <Expander Header="{DynamicResource LOC_VndbNexus_VotesLabel}" IsExpanded="True"
                                      Margin="0,10,0,0"
                                      Visibility="{Binding VotesText, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">


                                <StackPanel Margin="30,0,0,0">
                                    <Button Command="{Binding DataContext.OpenRatingVotesPageCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                        DockPanel.Dock="Left" VerticalAlignment="Center"
                                        HorizontalAlignment="Left"
                                        Margin="0,0,0,0"
                                        Padding="0" Background="Transparent" BorderThickness="0">
                                        <TextBlock Text="{Binding VotesText}"
                                               TextTrimming="CharacterEllipsis" />
                                    </Button>
                                    <Button Command="{Binding DataContext.OpenVndbReviewsPageCommand, RelativeSource={RelativeSource AncestorType=PluginUserControl}}"
                                            HorizontalAlignment="Left"
                                            Margin="0,10,0,0">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock Text="{DynamicResource LOC_VndbNexus_ReviewsLabel}" VerticalAlignment="Center" />
                                            <TextBlock Margin="5,0,0,0" Text="&#xEF1F;" FontFamily="{DynamicResource FontIcoFont}" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button>
                                </StackPanel>
                            </Expander>
                            
                        </StackPanel>
                    </DockPanel>

                    <Expander Header="{DynamicResource LOC_VndbNexus_LinksLabel}" Visibility="{Binding ElementName=VnExternalLinksControl, Path=HasItems, Converter={StaticResource BooleanToVisibilityConverter}}"
                                      IsExpanded="True" Margin="0,20,0,0">
                        <ItemsControl x:Name="VnExternalLinksControl"
                                              ItemsSource="{Binding ActiveVisualNovel.ExternalLinks}" Margin="20,10,0,0">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Padding="0" BorderThickness="0" Background="Transparent"
                                            Content="{Binding Label}" Margin="0,0,12,5"
                                            Command="{Binding DataContext.OpenUriCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                            CommandParameter="{Binding Url}"/>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>

                    <StackPanel Margin="0,10,0,0"
                                Visibility="{Binding ActiveVisualNovel.Description, Converter={StaticResource StringNullOrEmptyToVisibilityConverter}}">
                        <Separator Margin="0,5,0,5" />
                        <TextBlock Text="{DynamicResource LOC_VndbNexus_DescriptionLabel}" FontWeight="SemiBold" Margin="0,10,0,0" />
                        <ScrollViewer MaxHeight="280" Margin="0,10,0,0">
                            <pluginControls:HtmlTextView Margin="0,0,0,0" HorizontalAlignment="left"
                                                 HtmlFontFamily="{DynamicResource FontFamily}"
                                                 HtmlForeground="{DynamicResource TextColor}"
                                                 LinkForeground="{DynamicResource GlyphColor}"
                                                 HtmlFontSize="{DynamicResource FontSize}">
                                <pluginControls:HtmlTextView.HtmlText>
                                    <MultiBinding Converter="{StaticResource BbCodeToHtmlStringConverter}">
                                        <Binding Path="ActiveVisualNovel.Description" />
                                    </MultiBinding>
                                </pluginControls:HtmlTextView.HtmlText>
                            </pluginControls:HtmlTextView>
                        </ScrollViewer>
                    </StackPanel>

                    <StackPanel Margin="0,20,0,0">
                        <Separator Margin="0,5,0,5" />
                        <TextBlock Text="{DynamicResource LOC_VndbNexus_TagsLabel}" FontWeight="SemiBold" Margin="0,10,0,0" />
                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Left">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_TagsDisplayTypeOption}" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <ComboBox Margin="0,0,0,0" ItemsSource="{Binding Source={x:Type vndbNexusEnums:TagsDisplayOptionEnum}, Converter={StaticResource EnumToListConverter}}"
                                     SelectedItem="{Binding TagsDisplayOption}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizationStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_CategoriesLabel}" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <ToggleButton Content="{DynamicResource LOC_VndbNexus_TagsContentCategory}" Margin="0,0,5,0"
                                  Visibility="{Binding TagsContentCategoryButtonVisibility}"
                                  x:Name="TagsContentToggleButton"
                                  IsChecked="{Binding TagsDisplayContentCategory}" />
                            <ToggleButton Content="{DynamicResource LOC_VndbNexus_TagsTechnicalCategory}" Margin="0,0,5,0"
                                  Visibility="{Binding TagsTechnicalCategoryButtonVisibility}"
                                  IsChecked="{Binding TagsDisplayTechnicalCategory}" />
                            <ToggleButton Content="{DynamicResource LOC_VndbNexus_TagsSexualCategory}" Margin="0,0,0,0"
                                  Visibility="{Binding TagsSexualCategoryButtonVisibility}"
                                  IsChecked="{Binding TagsDisplaySexualCategory}" />
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,10,0,0">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_SpoilerLevelsLabel}" VerticalAlignment="Center" Margin="0,0,10,0" />
                            <ToggleButton Content="{DynamicResource LOC_VndbNexus_SpoilerLevelNone}" Margin="0,0,5,0"
                                  Visibility="{Binding TagsNoneSpoilerButtonVisibility}"
                                  IsChecked="{Binding TagsDisplayNoneSpoilers}" />

                            <ToggleButton Content="{DynamicResource LOC_VndbNexus_SpoilerLevelMinimum}" Margin="0,0,5,0"
                                  Visibility="{Binding TagsMinimumSpoilerButtonVisibility}"
                                  IsChecked="{Binding TagsDisplayMinimumSpoilers}" />

                            <ToggleButton Content="{DynamicResource LOC_VndbNexus_SpoilerLevelMajor}" Margin="0,0,0,0"
                                  Visibility="{Binding TagsMajorSpoilerButtonVisibility}"
                                  IsChecked="{Binding TagsDisplayMajorSpoilers}" />
                        </StackPanel>

                        <DockPanel Margin="0,10,0,0" LastChildFill="True">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_TagMinimumScore}" VerticalAlignment="Center"
                               DockPanel.Dock="Left" />
                            <TextBlock DockPanel.Dock="Right" VerticalAlignment="Center"
                               MinWidth="30" Text="{Binding TagsMinimumScore}" />
                            <Slider DockPanel.Dock="Left" VerticalAlignment="Center" Margin="5,0,5,0"
                            TickFrequency="0.1"
                            Minimum="0" Maximum="3" Value="{Binding TagsMinimumScore}" />
                        </DockPanel>

                        <Separator Margin="0,10,0,5" />
                        <ItemsControl ItemsSource="{Binding TagsToDisplay}" Margin="0,10,0,5">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel Orientation="Horizontal" VerticalAlignment="Center"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal" Margin="0,3,15,0">
                                        <Button Content="{Binding Name}" Padding="0"
                                                Background="Transparent"
                                                CommandParameter="{Binding Path=.}"
                                                BorderThickness="0">
                                            <Button.Command>
                                                <PriorityBinding>
                                                    <Binding Path="DataContext.OpenTagVndbPageCommand" RelativeSource="{RelativeSource AncestorType=PluginUserControl}" />
                                                    <Binding Mode="OneTime" Source="{x:Null}" />
                                                </PriorityBinding>
                                            </Button.Command>
                                        </Button>
                                        <TextBlock Text="S" Margin="3,0,0,3"
                                               VerticalAlignment="Center"
                                               FontSize="10"
                                               Visibility="{Binding Spoiler, Converter={StaticResource EnumValueToVisibilityConverter}, ConverterParameter={x:Static vndbDomainSharedkernel:SpoilerLevelEnum.Major}}"
                                               Foreground="Red" />
                                        <TextBlock Text="S" Margin="3,0,0,3"
                                               VerticalAlignment="Center"
                                               FontSize="10"
                                               Visibility="{Binding Spoiler, Converter={StaticResource EnumValueToVisibilityConverter}, ConverterParameter={x:Static vndbDomainSharedkernel:SpoilerLevelEnum.Minimum}}"
                                               Foreground="Orange" />
                                        <TextBlock Text="{Binding Rating, StringFormat={}{0:F1}}"
                                               FontSize="10" Margin="3,0,0,0"
                                               VerticalAlignment="Bottom"
                                               Opacity="0.5" />
                                    </StackPanel>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_VndbNexus_ReleasesLabel}" Visibility="{Binding ReleasesTabVisibility}">
                <StackPanel>
                    <ListBox Style="{DynamicResource CharacterWrappersLbStyle}"
                             ItemTemplate="{DynamicResource ReleasesGroupItemTemplate}"
                             ItemsSource="{Binding GroupedReleasesByLanguage.GroupedResults}" />
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_VndbNexus_CharactersLabel}" Visibility="{Binding CharactersTabVisibility}">
                <StackPanel Margin="0,20,0,0">
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,0" HorizontalAlignment="Right">
                        <TextBlock Text="{DynamicResource LOC_VndbNexus_MaximumSpoilerLevel}"
                                   VerticalAlignment="Center" />
                        <ComboBox Margin="5,0,0,0" ItemsSource="{Binding Source={x:Type vndbDomainSharedkernel:SpoilerLevelEnum}, Converter={StaticResource EnumToListConverter}}"
                                  SelectedItem="{Binding CharactersMaxSpoilerLevel}">
                            <ComboBox.ItemTemplate>
                                <DataTemplate>
                                    <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizationStringConverter}}" />
                                </DataTemplate>
                            </ComboBox.ItemTemplate>
                        </ComboBox>

                        <ToggleButton Content="{DynamicResource LOC_VndbNexus_CharacterShowSexualTraits}" Margin="20,0,0,0"
                                  HorizontalAlignment="Right"
                                  IsChecked="{Binding DisplayCharacterSexualTraits}" />
                    </StackPanel>



                    <TabControl Margin="0,10,0,0" SelectedIndex="{Binding SelectedCharactersControlTabIndex}">
                        <TabItem Header="{DynamicResource LOC_VndbNexus_CharacterTypeProtagonist}" Visibility="{Binding MainCharacterWrappersVisibility}">
                            <ListBox Style="{DynamicResource CharacterWrappersLbStyle}"
                                     ItemsSource="{Binding MainCharacterWrappers}" />
                        </TabItem>
                        <TabItem Header="{DynamicResource LOC_VndbNexus_CharacterTypeMainCharacters}" Visibility="{Binding PrimaryCharacterWrappersVisibility}">
                            <ListBox Style="{DynamicResource CharacterWrappersLbStyle}"
                                     ItemsSource="{Binding PrimaryCharacterWrappers}" />
                        </TabItem>
                        <TabItem Header="{DynamicResource LOC_VndbNexus_CharacterTypeSideCharacters}" Visibility="{Binding SideCharacterWrappersVisibility}">
                            <ListBox Style="{DynamicResource CharacterWrappersLbStyle}"
                                     ItemsSource="{Binding SideCharacterWrappers}" />
                        </TabItem>
                        <TabItem Header="{DynamicResource LOC_VndbNexus_CharacterTypeMakeAppearance}" Visibility="{Binding AppearsCharacterWrappersVisibility}">
                            <ListBox Style="{DynamicResource CharacterWrappersLbStyle}"
                                     ItemsSource="{Binding AppearsCharacterWrappers}" />
                        </TabItem>
                    </TabControl>
                </StackPanel>
            </TabItem>

            <TabItem Header="{DynamicResource LOC_VndbNexus_ScreenshotsLabel}" Visibility="{Binding ScreenshotsTabVisibility}">
                <StackPanel Margin="0,0,0,0">
                    <WrapPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,20,20,0">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_MaximumSexualityLevel}"
                                       Margin="0,0,0,0"
                                       VerticalAlignment="Center" />
                            <ComboBox Margin="10,0,0,0"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding Source={x:Type vndbImageDomain:ImageSexualityLevelEnum}, Converter={StaticResource EnumToListConverter}}"
                                      SelectedItem="{Binding ScreenshotsMaxSexualityLevel}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizationStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                            <TextBlock Text="{DynamicResource LOC_VndbNexus_MaximumViolenceLevel}"
                               Margin="0,0,0,0"
                               VerticalAlignment="Center" />
                            <ComboBox Margin="10,0,0,0"
                                      VerticalAlignment="Center"
                                      ItemsSource="{Binding Source={x:Type vndbImageDomain:ImageViolenceLevelEnum}, Converter={StaticResource EnumToListConverter}}"
                                      SelectedItem="{Binding ScreenshotsMaxViolenceLevel}">
                                <ComboBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock Text="{Binding Converter={StaticResource EnumToLocalizationStringConverter}}" />
                                    </DataTemplate>
                                </ComboBox.ItemTemplate>
                            </ComboBox>
                        </StackPanel>

                    </WrapPanel>


                    <pluginControls:VndbImageControl
                        MaximumSexuality="{Binding ScreenshotsMaxSexualityLevel}"
                        MaximumViolence="{Binding ScreenshotsMaxViolenceLevel}"
                        ImagesSource="{Binding ActiveVisualNovel.Screenshots}" />
                </StackPanel>
            </TabItem>

        </TabControl>
    </Grid>
</PluginUserControl>
