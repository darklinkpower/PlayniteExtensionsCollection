<UserControl x:Class="PlayState.Views.SplashWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PlayState.Views"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="LightGray">
        <StackPanel Margin="24,12,24,12">
            <TextBlock Text="{Binding GameName}" FontWeight="Bold" FontSize="30" HorizontalAlignment="Center" />
            <TextBlock Text="{Binding NotificationMessage}" FontWeight="Normal" FontSize="18" HorizontalAlignment="Center" />
        </StackPanel>
    </Grid>
</UserControl>
