<UserControl x:Class="ThemesDetailsViewToGridViewConverter.ThemesDetailsViewToGridViewConverterSettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="400" d:DesignWidth="600">
    <ScrollViewer Margin="20">
        <StackPanel>
            <TextBlock Text="{DynamicResource LOCThemeDetailsToGridConverter_ThemesToConvertLabel}" />
            <StackPanel Margin="40,0,0,0">
                <CheckBox Content="DH Dawn"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertDhDawn}"/>
                <CheckBox Content="DH Night"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertDhNight}"/>
                <CheckBox Content="Harmony"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertHarmony}"/>
                <CheckBox Content="Helium"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertHelium}"/>
                <CheckBox Content="Mythic"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertMythic}"/>
                <CheckBox Content="Nova X"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertNovaX}"/>
                <CheckBox Content="Stardust"
                          Margin="0,10,0,0"
                          IsChecked="{Binding Settings.ConvertStardust}"/>
            </StackPanel>
            
        </StackPanel>
    </ScrollViewer>
</UserControl>